# ManualStudio Backend Environment Configuration

# ==============================================================================
# Database
# ==============================================================================
DATABASE_URL=postgresql://manualstudio:manualstudio@localhost:5432/manualstudio

# ==============================================================================
# Redis (Celery broker)
# ==============================================================================
REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# S3/MinIO Storage
# ==============================================================================
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=manualstudio
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# ==============================================================================
# LLM Provider Settings
# ==============================================================================
# Provider selection: openai | anthropic | mock
LLM_PROVIDER=openai

# OpenAI Settings
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o

# Anthropic Settings (required when LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4000

# ==============================================================================
# Transcription Provider Settings
# ==============================================================================
# Provider selection: openai | mock
TRANSCRIBE_PROVIDER=openai

# ==============================================================================
# Application Settings
# ==============================================================================
MAX_VIDEO_MINUTES=15
MAX_VIDEO_SIZE_MB=1024
SECRET_KEY=change-this-in-production

# ==============================================================================
# Logging
# ==============================================================================
LOG_LEVEL=INFO
